<section class="event-cart pt-12 pb-8">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 mb-4 pe-lg-4">
                <div class="product-coupon p-4 border-all">
                    <h3>Please select the ticket type</h3>
                    <form>
                        <div class="form-group">
                            <h4>Main Event</h4>
                            <!-- Adult Ticket -->
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="checkbox" id="product1">
                                <label class="form-check-label" for="product1">Adult - ($175)</label>
                            </div>
                            <div class="input-group w-50 mt-2" id="product1Quantity" style="display: none;">
                                <div class="input-group-prepend">
                                    <button class="btn btn-outline-secondary" type="button" id="decreaseBtn1">-</button>
                                </div>
                                <input type="text" class="form-control text-center quantity" id="quantity1" value="1">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="button" id="increaseBtn1">+</button>
                                </div>
                            </div>
                            <!-- Child Ticket -->
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="checkbox" id="product2">
                                <label class="form-check-label" for="product2">Child (under 12) - ($150)</label>
                            </div>
                            <div class="input-group w-50 mt-2" id="product2Quantity" style="display: none;">
                                <div class="input-group-prepend">
                                    <button class="btn btn-outline-secondary" type="button" id="decreaseBtn2">-</button>
                                </div>
                                <input type="text" class="form-control text-center quantity" id="quantity2" value="1">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="button" id="increaseBtn2">+</button>
                                </div>
                            </div>
                            <h4 class="mt-3">River Cruise</h4>
                            <!-- Adult Ticket -->
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="checkbox" id="product3">
                                <label class="form-check-label" for="product3">Adult - ($50)</label>
                            </div>
                            <div class="input-group w-50 mt-2" id="product3Quantity" style="display: none;">
                                <div class="input-group-prepend">
                                    <button class="btn btn-outline-secondary" type="button" id="decreaseBtn3">-</button>
                                </div>
                                <input type="text" class="form-control text-center quantity" id="quantity3" value="1">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="button" id="increaseBtn3">+</button>
                                </div>
                            </div>
                            <!-- Child Ticket -->
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="checkbox" id="product4">
                                <label class="form-check-label" for="product4">Child (under 12) - ($40)</label>
                            </div>
                            <div class="input-group w-50 mt-2" id="product4Quantity" style="display: none;">
                                <div class="input-group-prepend">
                                    <button class="btn btn-outline-secondary" type="button" id="decreaseBtn4">-</button>
                                </div>
                                <input type="text" class="form-control text-center quantity" id="quantity4" value="1">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="button" id="increaseBtn4">+</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-5 mb-4">
                    <div class="cart-collaterals p-4 border-all mb-4">

                        <h3 class="mb-4">Your Order</h3>
                        <table cellspacing="0" class="product-table">
                            <thead>
                            <th class="w-60 fw-bold">Product</th>
                            <th class="fw-bold">Subtotal</th>
                            </thead>
                            <tbody>
                            <tr class="cart-subtotal border-bottom">
                                <td class="w-60"><p id="item1Quantity"><span class="fw-bold">Main Event </span> (Adult) x 0</p></td>
                                <td data-title="Subtotal"><p id="item1Total">$0</p></td>
                            </tr>

                            <tr class="cart-subtotal border-bottom">
                                <td class="w-60"><p id="item2Quantity"><span class="fw-bold">Main Event </span> (Child) x 0</p></td>
                                <td data-title="Subtotal"><p id="item2Total">$0</p></td>
                            </tr>

                            <tr class="cart-subtotal border-bottom">
                                <td class="w-60"><p id="item3Quantity"><span class="fw-bold">River Cruise </span> (Adult) x 0</p></td>
                                <td data-title="Subtotal"><p id="item3Total">$0</p></td>
                            </tr>

                            <tr class="cart-subtotal border-bottom">
                                <td class="w-60"><p id="item4Quantity"><span class="fw-bold">River Cruise </span> (Child) x 0</p></td>
                                <td data-title="Subtotal"><p id="item4Total">$0</p></td>
                            </tr>

                            <tr class="order-total">
                                <td class="w-60 fw-bold">Total</td>
                                <td data-title="Total" class="fw-bold"><p id="subtotal">$0</p></td>
                                <input type="text" class="d-none" name="amount" id="amount">
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="checkout-order border-all p-4">
                        <button class="nir-btn d-block mt-2" id="btnPlaceOrder">Place Order</button>
                    </div>
            </div>
        </div>

    </div>
</section>
